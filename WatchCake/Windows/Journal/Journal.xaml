<Window x:Class="WatchCake.JournalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchCake"
        mc:Ignorable="d"                 
        Title="Journal - WatchCake" Width="800" Height="512">

    <ScrollViewer>
        <TextBox Text="{Binding Text, Mode=OneWay}" IsReadOnly="True" TextWrapping="WrapWithOverflow"/>
    </ScrollViewer>

</Window>
